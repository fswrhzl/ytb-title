// 组合本地缓存和Redis缓存
package cache

import (
	"sync"
	"time"

	"golang.org/x/sync/singleflight"
)

type DualCache struct {
	local *LocalCache
	redis *RedisCache
	group singleflight.Group
}

func NewDualCache(local *LocalCache, redis *RedisCache) *DualCache {
	return &DualCache{
		local: local,
		redis: redis,
	}
}

